{
  "name": "@kitiumai/playwright-helpers",
  "version": "1.0.1",
  "description": "Playwright E2E test helpers for enterprise testing",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "sideEffects": false,
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "automation",
    "enterprise",
    "kitiumai",
    "typescript",
    "javascript",
    "nodejs",
    "browser",
    "web",
    "kitium"
  ],
  "author": "KitiumAI",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kitium-ai/playwright-helpers.git"
  },
  "homepage": "https://github.com/kitium-ai/playwright-helpers#readme",
  "bugs": {
    "url": "https://github.com/kitium-ai/playwright-helpers/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./page-objects": {
      "types": "./dist/page-objects/index.d.ts",
      "default": "./dist/page-objects/index.js"
    },
    "./assertions": {
      "types": "./dist/assertions/index.d.ts",
      "default": "./dist/assertions/index.js"
    },
    "./network": {
      "types": "./dist/network/index.d.ts",
      "default": "./dist/network/index.js"
    },
    "./auth": {
      "types": "./dist/auth/index.d.ts",
      "default": "./dist/auth/index.js"
    },
    "./accessibility": {
      "types": "./dist/accessibility/index.d.ts",
      "default": "./dist/accessibility/index.js"
    },
    "./visual": {
      "types": "./dist/visual/index.d.ts",
      "default": "./dist/visual/index.js"
    },
    "./performance": {
      "types": "./dist/performance/index.d.ts",
      "default": "./dist/performance/index.js"
    },
    "./setup": {
      "types": "./dist/setup/index.d.ts",
      "default": "./dist/setup/index.js"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "default": "./dist/testing/index.js"
    },
    "./flows": {
      "types": "./dist/flows/index.d.ts",
      "default": "./dist/flows/index.js"
    },
    "./patterns": {
      "types": "./dist/patterns/index.d.ts",
      "default": "./dist/patterns/index.js"
    },
    "./tracing": {
      "types": "./dist/tracing/index.d.ts",
      "default": "./dist/tracing/index.js"
    },
    "./resilience": {
      "types": "./dist/resilience/index.d.ts",
      "default": "./dist/resilience/index.js"
    },
    "./data": {
      "types": "./dist/data/index.d.ts",
      "default": "./dist/data/index.js"
    },
    "./security": {
      "types": "./dist/security/index.d.ts",
      "default": "./dist/security/index.js"
    },
    "./contract": {
      "types": "./dist/contract/index.d.ts",
      "default": "./dist/contract/index.js"
    },
    "./reporting": {
      "types": "./dist/reporting/index.d.ts",
      "default": "./dist/reporting/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "CONTRIBUTING.md",
    "CODE_OF_CONDUCT.md"
  ],
  "scripts": {
    "build": "tsc -b",
    "build:clean": "npm run clean && npm run build",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc -b --noEmit",
    "type-check": "tsc -b --noEmit",
    "test": "playwright test",
    "test:watch": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:coverage": "playwright test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "format:check": "prettier --check .",
    "changeset": "ensure-changeset && changeset",
    "version": "changeset version",
    "publish:set-token": "set-npm-token",
    "publish:setup": "set-npm-token",
    "publish:check": "npm whoami --registry https://registry.npmjs.org || npm login --registry https://registry.npmjs.org",
    "publish:login": "npm login --registry https://registry.npmjs.org",
    "publish:package": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org",
    "publish:package:otp": "pnpm run publish:check && pnpm publish --access public --no-git-checks --registry https://registry.npmjs.org --otp",
    "publish:dry-run": "pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "publish:dry-run:token": "pnpm run publish:setup && pnpm publish --access public --no-git-checks --dry-run --registry https://registry.npmjs.org",
    "prepublishOnly": "npm run verify",
    "verify": "npm run lint && npm run build",
    "verify:test-quality": "node dist/reporting/quality-scorecard.js",
    "release": "pnpm version && pnpm install --lockfile-only"
  },
  "dependencies": {
    "@kitiumai/logger": "^2.0.0"
  },
  "peerDependencies": {
    "@playwright/test": "^1.44.0",
    "typescript": "^5.6.0"
  },
  "devDependencies": {
    "@kitiumai/config": "^2.0.0",
    "@kitiumai/lint": "^2.0.0",
    "@kitiumai/scripts": "^1.0.0",
    "@kitiumai/test-core": "^2.0.0",
    "@changesets/cli": "^2.27.1",
    "@playwright/test": "^1.44.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.6.0"
  },
  "pnpm": {
    "overrides": {
      "lodash.get": "npm:lodash@^4.17.21",
      "subscriptions-transport-ws": "^0.9.19"
    }
  }
}
